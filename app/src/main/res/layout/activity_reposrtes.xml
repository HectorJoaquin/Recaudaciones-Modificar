<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReposrtesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#239371">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/escudo1"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bienvenido a Recaudaciones la nueva forma de verificar sus pagos."
                android:layout_gravity="center"
                android:layout_margin="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerReporte"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#036e90"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Pagado : "
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="#ffff"/>



            <TextView
                android:id="@+id/tvTotalPagado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 4716.00"
                android:padding="6dp"
                android:background="#fa7f14"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="60dp"
                android:textSize="20sp"
                android:textColor="#ffff"/>




        </LinearLayout>










    </LinearLayout>


</android.support.constraint.ConstraintLayout>